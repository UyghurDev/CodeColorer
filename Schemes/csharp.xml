<?xml version="1.0" encoding="utf-8" ?>
<scheme name="C# Files" extension="*.cs;">
 <groups>
  <group name="Default" color="Black" bgcolor="White" bold="false" italic="false" underline="false" />    
  <group name="Macros" color="Red" bgcolor="White" bold="false" italic="false" underline="false">    
   <bracket start="#" end="$none" carry="\" onlybegin="false" />   
  </group>
  <group name="Numerics" color="Orange" bgcolor="White" bold="false" italic="false" underline="false">    
   <regex value="(\d*?\.\d+?)">(?&lt;=(\W))(\d*?\.\d+?)(?=(\W))</regex>
   <regex value="(\d*?\.\d+?f)">(?&lt;=(\W))(\d*?\.\d+?f)(?=(\W))</regex>
   <regex value="(\d+?)">(?&lt;=(\W))(\d+?)(?=(\W))</regex>
   <regex value="(0[x|X][\d|A|B|C|D|E|F|a|b|c|d|e|f]+?)">(?&lt;=(\W))(0[x|X][\d|A|B|C|D|E|F|a|b|c|d|e|f]+?)(?=(\W))</regex>
  </group>
  <group name="Types" color="Blue" bgcolor="White" bold="false" italic="false" underline="false">
    <word>int</word>
    <word>uint</word>
    <word>out</word>
    <word>ushort</word>
    <word>long</word>
    <word>class</word>
    <word>ref</word>
    <word>char</word>
    <word>sbyte</word>
    <word>struct</word>
    <word>protected</word>
    <word>short</word>
    <word>const</word>
    <word>float</word>
    <word>ulong</word>
    <word>void</word>
    <word>word</word>
    <word>public</word>
    <word>extern</word>
    <word>virtual</word>
    <word>bool</word>
    <word>in</word>
    <word>byte</word>
    <word>decimal</word>
    <word>static</word>
    <word>object</word>
    <word>double</word>
    <word>delegate</word>    
  </group>
  <group name="Identificators" color="DarkBlue" bgcolor="White" bold="false" italic="false" underline="false">
    <word>else</word>
    <word>foreach</word>
    <word>switch</word>
    <word>operator</word>
    <word>enum</word>
    <word>false</word>
    <word>this</word>
    <word>throw</word>
    <word>checked</word>
    <word>event</word>
    <word>private</word>
    <word>explicit</word>
    <word>interface</word>
    <word>using</word>
    <word>while</word>
    <word>new</word>
    <word>for</word>
    <word>override</word>
    <word>base</word>
    <word>continue</word>
    <word>goto</word>
    <word>finally</word>
    <word>is</word>
    <word>try</word>
    <word>namespace</word>
    <word>break</word>
    <word>do</word>
    <word>return</word>
    <word>abstract</word>
    <word>case</word>
    <word>unchecked</word>
    <word>lock</word>
    <word>default</word>
    <word>true</word>
    <word>unsafe</word>
    <word>if</word>
    <word>null</word>
    <word>catch</word>
    <word>params</word>
    <word>typeof</word>
    <word>sealed</word>
    <word>readonly</word>
    <word>sizeof</word>
    <word>internal</word>
    <word>fixed</word>
    <word>implicit</word>
  </group>   
  <group name="Comments" color="DarkGreen" bgcolor="#eeeeee" bold="false" italic="false" underline="false">    
   <bracket start="//" end="$none" carry="$none" onlybegin="false" />   
   <bracket start="/*" end="*/" carry="$any" onlybegin="false" />
  </group>
  <group name="Strings" color="DarkRed" bgcolor="White" bold="false" italic="false" underline="false">    
   <bracket start="&apos;" end="&apos;" carry="\" onlybegin="false" />   
   <bracket start="&quot;" end="&quot;" carry="\" onlybegin="false" />
   <bracket start="@&quot;" end="&quot;" carry="any" onlybegin="false" />    
  </group>
 </groups>
</scheme>
